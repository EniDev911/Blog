<div id="<%= dom_id post %>">
  <p>
    <img src="<%= post.image %>" alt="pic" height="60">
  </p>

  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= post.description %>
  </p>

  <p>
    <strong>User:</strong>
    <%= post.user.email %>
  </p>

</div>
