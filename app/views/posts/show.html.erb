<p style="color: green"><%= notice %></p>

<%= render @post %>

<div>
  <%= link_to "Back to posts", posts_path, class: "btn btn-primary" %>

<% if user_signed_in? %>
  <% if current_user.id == @post.user.id %>
  <div class="d-flex mt-3">
    <%= link_to "Edit this post", edit_post_path(@post), class: "btn btn-warning me-2" %> 
    <%= button_to "Destroy this post", @post, method: :delete, class: "btn btn-danger" %>
  </div>
  <% end %>
<% end %>
</div>
